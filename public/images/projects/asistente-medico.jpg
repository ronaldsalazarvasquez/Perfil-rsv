<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 800 600">
  <defs>
    <linearGradient id="medGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#0a0a0a;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1a1a2e;stop-opacity:1" />
    </linearGradient>
  </defs>

  <rect width="800" height="600" fill="url(#medGrad)"/>

  <!-- Medical cross pattern background -->
  <g opacity="0.05" fill="#10b981">
    <rect x="100" y="50" width="20" height="60" rx="3"/>
    <rect x="80" y="70" width="60" height="20" rx="3"/>

    <rect x="660" y="50" width="20" height="60" rx="3"/>
    <rect x="640" y="70" width="60" height="20" rx="3"/>

    <rect x="100" y="470" width="20" height="60" rx="3"/>
    <rect x="80" y="490" width="60" height="20" rx="3"/>

    <rect x="660" y="470" width="20" height="60" rx="3"/>
    <rect x="640" y="490" width="60" height="20" rx="3"/>
  </g>

  <!-- Medical Monitor Icon -->
  <g transform="translate(400, 230)">
    <!-- Monitor screen -->
    <rect x="-100" y="-60" width="200" height="140" rx="8" fill="none" stroke="#10b981" stroke-width="3"/>

    <!-- Heart rate line -->
    <path d="M-80,20 L-60,20 L-50,-20 L-40,60 L-30,-30 L-20,20 L0,20 L10,-10 L20,50 L30,-20 L40,20 L60,20 L80,20"
          stroke="#10b981" stroke-width="2.5" fill="none">
      <animate attributeName="opacity" values="0.5;1;0.5" dur="1.5s" repeatCount="indefinite"/>
    </path>

    <!-- Pulse dot -->
    <circle cx="80" cy="20" r="4" fill="#10b981">
      <animate attributeName="r" values="3;6;3" dur="1.5s" repeatCount="indefinite"/>
      <animate attributeName="opacity" values="0.5;1;0.5" dur="1.5s" repeatCount="indefinite"/>
    </circle>

    <!-- AI chip symbol -->
    <rect x="-25" y="-45" width="50" height="35" rx="3" fill="none" stroke="#059669" stroke-width="1.5"/>
    <text x="0" y="-20" font-family="monospace" font-size="14" fill="#059669" text-anchor="middle">AI</text>

    <!-- Monitor stand -->
    <rect x="-15" y="82" width="30" height="8" rx="2" fill="#10b981"/>
    <rect x="-40" y="90" width="80" height="6" rx="3" fill="#10b981"/>
  </g>

  <!-- Title -->
  <text x="400" y="420" font-family="Arial, sans-serif" font-size="32" font-weight="bold" fill="#10b981" text-anchor="middle">
    Asistente Médico con IA
  </text>

  <!-- Subtitle -->
  <text x="400" y="460" font-family="Arial, sans-serif" font-size="18" fill="#059669" text-anchor="middle">
    Salud Digital · Telemedicina
  </text>

  <!-- Decorative medical icons -->
  <g opacity="0.2" fill="#10b981">
    <circle cx="120" cy="140" r="25"/>
    <text x="120" y="150" font-size="24" fill="#0a0a0a" text-anchor="middle">+</text>

    <circle cx="680" cy="140" r="25"/>
    <text x="680" y="150" font-size="24" fill="#0a0a0a" text-anchor="middle">+</text>
  </g>
</svg>
