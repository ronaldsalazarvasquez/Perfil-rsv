<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 800 600">
  <defs>
    <linearGradient id="devGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#0a0a0a;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1a1a2e;stop-opacity:1" />
    </linearGradient>
  </defs>

  <rect width="800" height="600" fill="url(#devGrad)"/>

  <!-- Code brackets pattern -->
  <g opacity="0.1" stroke="#10b981" stroke-width="2" fill="none">
    <path d="M 100 100 L 80 150 L 100 200"/>
    <path d="M 700 100 L 720 150 L 700 200"/>
    <path d="M 100 400 L 80 450 L 100 500"/>
    <path d="M 700 400 L 720 450 L 700 500"/>
  </g>

  <!-- Main code window -->
  <g transform="translate(400, 250)">
    <!-- Window frame -->
    <rect x="-140" y="-100" width="280" height="180" rx="8" fill="none" stroke="#10b981" stroke-width="3"/>

    <!-- Window buttons -->
    <circle cx="-120" cy="-85" r="5" fill="#ff5f56"/>
    <circle cx="-105" cy="-85" r="5" fill="#ffbd2e"/>
    <circle cx="-90" cy="-85" r="5" fill="#27c93f"/>

    <!-- Code lines -->
    <g font-family="monospace" font-size="14" fill="#10b981">
      <text x="-120" y="-55">const project = {</text>
      <text x="-100" y="-30">  status: "developing",</text>
      <text x="-100" y="-5">  progress: </text>
      <rect x="-10" y="-15" width="80" height="12" fill="none" stroke="#10b981" stroke-width="1" rx="6"/>
      <rect x="-10" y="-15" width="50" height="12" fill="#10b981" rx="6">
        <animate attributeName="width" values="30;80;30" dur="3s" repeatCount="indefinite"/>
      </rect>
      <text x="-100" y="20">  tech: ["IoT", "ML"],</text>
      <text x="-120" y="45">};</text>
    </g>

    <!-- Animated cursor -->
    <rect x="100" y="32" width="8" height="16" fill="#10b981">
      <animate attributeName="opacity" values="0;1;0" dur="1s" repeatCount="indefinite"/>
    </rect>
  </g>

  <!-- Gear animation -->
  <g transform="translate(150, 200)">
    <path d="M0,-30 L5,-25 L10,-30 L10,-20 L15,-15 L20,-20 L20,-10 L15,-5 L20,0 L20,10 L15,5 L10,10 L10,20 L5,15 L0,20 L0,10 L-5,5 L-10,10 L-10,0 L-5,-5 L-10,-10 L-10,-20 L-5,-15 L0,-20 Z"
          fill="none" stroke="#10b981" stroke-width="2">
      <animateTransform attributeName="transform" type="rotate" from="0" to="360" dur="8s" repeatCount="indefinite"/>
    </path>
    <circle r="10" fill="none" stroke="#10b981" stroke-width="2"/>
  </g>

  <g transform="translate(650, 400)">
    <path d="M0,-25 L4,-21 L8,-25 L8,-17 L12,-13 L16,-17 L16,-8 L12,-4 L16,0 L16,8 L12,4 L8,8 L8,17 L4,13 L0,17 L0,8 L-4,4 L-8,8 L-8,0 L-4,-4 L-8,-8 L-8,-17 L-4,-13 L0,-17 Z"
          fill="none" stroke="#10b981" stroke-width="2">
      <animateTransform attributeName="transform" type="rotate" from="360" to="0" dur="6s" repeatCount="indefinite"/>
    </path>
    <circle r="8" fill="none" stroke="#10b981" stroke-width="2"/>
  </g>

  <!-- Title -->
  <text x="400" y="440" font-family="Arial, sans-serif" font-size="32" font-weight="bold" fill="#10b981" text-anchor="middle">
    Proyectos en Desarrollo
  </text>

  <!-- Subtitle -->
  <text x="400" y="480" font-family="Arial, sans-serif" font-size="18" fill="#059669" text-anchor="middle">
    Innovación Continua · IoT · Machine Learning
  </text>

  <!-- Loading dots -->
  <g transform="translate(400, 520)">
    <circle cx="-20" cy="0" r="4" fill="#10b981">
      <animate attributeName="opacity" values="0.3;1;0.3" dur="1.5s" begin="0s" repeatCount="indefinite"/>
    </circle>
    <circle cx="0" cy="0" r="4" fill="#10b981">
      <animate attributeName="opacity" values="0.3;1;0.3" dur="1.5s" begin="0.5s" repeatCount="indefinite"/>
    </circle>
    <circle cx="20" cy="0" r="4" fill="#10b981">
      <animate attributeName="opacity" values="0.3;1;0.3" dur="1.5s" begin="1s" repeatCount="indefinite"/>
    </circle>
  </g>
</svg>
