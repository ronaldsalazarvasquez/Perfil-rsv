<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 800 600">
  <defs>
    <linearGradient id="aiGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#0a0a0a;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1a1a2e;stop-opacity:1" />
    </linearGradient>
  </defs>

  <rect width="800" height="600" fill="url(#aiGrad)"/>

  <!-- Circuit pattern background -->
  <g opacity="0.1" stroke="#10b981" stroke-width="1" fill="none">
    <circle cx="100" cy="100" r="40"/>
    <circle cx="700" cy="100" r="40"/>
    <circle cx="100" cy="500" r="40"/>
    <circle cx="700" cy="500" r="40"/>
    <line x1="140" y1="100" x2="660" y2="100"/>
    <line x1="140" y1="500" x2="660" y2="500"/>
    <line x1="100" y1="140" x2="100" y2="460"/>
    <line x1="700" y1="140" x2="700" y2="460"/>
  </g>

  <!-- AI Brain Icon -->
  <g transform="translate(400, 250)">
    <!-- Brain outline -->
    <path d="M-60,-40 Q-80,-60 -60,-80 Q-40,-90 -20,-80 Q0,-90 20,-80 Q40,-90 60,-80 Q80,-60 60,-40 L60,20 Q60,50 30,60 Q0,70 -30,60 Q-60,50 -60,20 Z"
          fill="none" stroke="#10b981" stroke-width="3"/>

    <!-- Neural connections -->
    <circle cx="-30" cy="-40" r="8" fill="#10b981"/>
    <circle cx="0" cy="-50" r="8" fill="#10b981"/>
    <circle cx="30" cy="-40" r="8" fill="#10b981"/>
    <circle cx="-30" cy="0" r="8" fill="#10b981"/>
    <circle cx="30" cy="0" r="8" fill="#10b981"/>
    <circle cx="0" cy="30" r="8" fill="#10b981"/>

    <line x1="-30" y1="-40" x2="0" y2="-50" stroke="#10b981" stroke-width="2" opacity="0.6"/>
    <line x1="0" y1="-50" x2="30" y2="-40" stroke="#10b981" stroke-width="2" opacity="0.6"/>
    <line x1="-30" y1="-40" x2="-30" y2="0" stroke="#10b981" stroke-width="2" opacity="0.6"/>
    <line x1="30" y1="-40" x2="30" y2="0" stroke="#10b981" stroke-width="2" opacity="0.6"/>
    <line x1="-30" y1="0" x2="0" y2="30" stroke="#10b981" stroke-width="2" opacity="0.6"/>
    <line x1="30" y1="0" x2="0" y2="30" stroke="#10b981" stroke-width="2" opacity="0.6"/>
  </g>

  <!-- Title -->
  <text x="400" y="420" font-family="Arial, sans-serif" font-size="32" font-weight="bold" fill="#10b981" text-anchor="middle">
    Sistema Copiloto IA
  </text>

  <!-- Subtitle -->
  <text x="400" y="460" font-family="Arial, sans-serif" font-size="18" fill="#059669" text-anchor="middle">
    Inteligencia Artificial Industrial
  </text>

  <!-- Decorative elements -->
  <circle cx="150" cy="150" r="3" fill="#10b981" opacity="0.8">
    <animate attributeName="opacity" values="0.3;1;0.3" dur="2s" repeatCount="indefinite"/>
  </circle>
  <circle cx="650" cy="450" r="3" fill="#10b981" opacity="0.8">
    <animate attributeName="opacity" values="0.3;1;0.3" dur="2.5s" repeatCount="indefinite"/>
  </circle>
  <circle cx="650" cy="150" r="3" fill="#10b981" opacity="0.8">
    <animate attributeName="opacity" values="0.3;1;0.3" dur="3s" repeatCount="indefinite"/>
  </circle>
</svg>
