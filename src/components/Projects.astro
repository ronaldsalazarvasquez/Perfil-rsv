---
const projects = [
  {
    title: 'Eureka',
    subtitle: 'Ganador de Hackathon',
    description: 'Repositorio de ideas que incentiva a estudiantes y profesionales a mostrar sus proyectos.',
    tags: ['React', 'Node.js', 'MySQl'],
    image: '/images/projects/eureka.png',
    demoLink: 'https://eureka-app-pi.vercel.app/'
  },
  {
    title: 'Gestión de Herramientas',
    subtitle: 'Cliente: Backus S.A.',
    description: 'Sistema avanzado para la gestión y trazabilidad de herramientas en proyectos industriales.',
    tags: ['Python', 'FastAPI', 'PostgreSQL'],
    image: '/images/projects/gestion-herramientas.png',
    demoLink: 'https://inventario-taller-black.vercel.app/'
  },
  {
    title: 'Lectura KPI en Tiempo Real',
    subtitle: 'Industria Manufacturera',
    description: 'Plataforma de monitoreo y análisis de indicadores clave de proceso en tiempo real.',
    tags: ['React', 'WebSockets', 'InfluxDB'],
    image: '/images/projects/kpi-realtime.png',
    demoLink: null
  },
  {
    title: 'Sistema Copiloto IA',
    subtitle: 'IA Industrial',
    description: 'Copiloto inteligente que indica decisiones oportunas ante desvíos o fallas.',
    tags: ['Python', 'OpenAI', 'TensorFlow'],
    image: '/images/projects/copiloto-ia.jpg',
    demoLink: null
  },
  {
    title: 'Asistente Médico con IA',
    subtitle: 'Salud Digital',
    description: 'Plataforma que conecta doctores y pacientes con soporte inteligente.',
    tags: ['Next.js', 'Python', 'OpenAI'],
    image: '/images/projects/asistente-medico.jpg',
    demoLink: null
  },
  {
    title: 'Proyectos en Desarrollo',
    subtitle: 'Innovación Continua',
    description: 'Trabajando en proyectos de automatización industrial y análisis predictivo.',
    tags: ['IoT', 'Machine Learning', 'Cloud'],
    image: '/images/projects/en-desarrollo.jpg',
    demoLink: null
  }
];
---

<section id="projects" class="py-20 px-4">
  <div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4 text-[#10b981]" style="font-family: var(--font-main);">
        Proyectos Destacados
      </h2>
      <p class="text-gray-400 text-lg" style="font-family: var(--font-main);">
        Soluciones reales que han generado impacto
      </p>
    </div>

    <!-- Projects Grid 3x2 (responsive) -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((project, index) => (
        <div class="group relative bg-white/5 rounded-xl overflow-hidden border border-white/10 hover:border-[#10b981]/50 transition-all duration-300 hover:transform hover:scale-105">
          <!-- Image -->
          <div class="relative h-48 overflow-hidden">
            <img
              src={project.image}
              alt={project.title}
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
              onerror="this.src='data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 400 300%22%3E%3Crect fill=%22%23111%22 width=%22400%22 height=%22300%22/%3E%3Ctext x=%2250%25%22 y=%2250%25%22 dominant-baseline=%22middle%22 text-anchor=%22middle%22 font-family=%22monospace%22 font-size=%2220%22 fill=%22%2310b981%22%3E{project.title}%3C/text%3E%3C/svg%3E'"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent"></div>
          </div>

          <!-- Content -->
          <div class="p-6">
            <!-- Title -->
            <h3 class="text-xl font-bold mb-2 text-white group-hover:text-[#10b981] transition-colors" style="font-family: var(--font-main);">
              {project.title}
            </h3>

            <!-- Subtitle -->
            <p class="text-sm text-gray-500 mb-3" style="font-family: var(--font-main);">
              {project.subtitle}
            </p>

            <!-- Description -->
            <p class="text-gray-400 text-sm mb-4 line-clamp-2" style="font-family: var(--font-main);">
              {project.description}
            </p>

            <!-- Tags -->
            <div class="flex flex-wrap gap-2 mb-4">
              {project.tags.map((tag) => (
                <span class="px-2 py-1 bg-white/5 text-gray-500 text-xs rounded border border-white/10" style="font-family: var(--font-main);">
                  {tag}
                </span>
              ))}
            </div>

            <!-- Demo Button (always present) -->
            {project.demoLink ? (
              <a
                href={project.demoLink}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 px-4 py-2 bg-[#112E11] text-white text-sm font-medium rounded-lg hover:bg-[#059669] transition-colors w-full justify-center"
                style="font-family: var(--font-main);"
              >
                <span>Ver Demo</span>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
            ) : (
              <button
                class="demo-button inline-flex items-center gap-2 px-4 py-2 bg-[#112E11] text-white text-sm font-medium rounded-lg hover:bg-[#059669] transition-colors w-full justify-center"
                style="font-family: var(--font-main);"
                data-project={project.title}
              >
                <span>Ver Demo</span>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </button>
            )}
          </div>

          <!-- Bottom Accent Line -->
          <div class="absolute bottom-0 left-0 right-0 h-1 bg-[#10b981] transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-left"></div>
        </div>
      ))}
    </div>
  </div>

  <!-- Toast Notification for Local Projects -->
  <div id="toast-notification" class="fixed top-24 right-4 max-w-md opacity-0 pointer-events-none transition-all duration-500 transform translate-x-full z-50">
    <div class="bg-gradient-to-br from-gray-900 to-gray-800 rounded-xl shadow-2xl border border-[#10b981]/30 overflow-hidden">
      <div class="p-6 flex items-start gap-4">
        <!-- Animated Robot Icon -->
        <div class="flex-shrink-0">
          <div class="w-16 h-16 rounded-full bg-[#10b981]/20 flex items-center justify-center animate-bounce-slow">
            <svg class="w-10 h-10 text-[#10b981] animate-pulse" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm-1-13h2v6h-2zm0 8h2v2h-2z"/>
            </svg>
          </div>
        </div>

        <!-- Message Content -->
        <div class="flex-1">
          <h4 class="text-white font-bold mb-2 text-lg" style="font-family: var(--font-main);">
            Proyecto Local
          </h4>
          <p id="toast-message" class="text-gray-300 text-sm leading-relaxed typing-animation" style="font-family: var(--font-main);">
          </p>
        </div>

        <!-- Close Button -->
        <button id="toast-close" class="flex-shrink-0 text-gray-400 hover:text-white transition-colors">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <!-- Progress Bar -->
      <div class="h-1 bg-gray-700">
        <div id="toast-progress" class="h-full bg-[#10b981] transition-all duration-[5000ms] ease-linear w-0"></div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes bounce-slow {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .animate-bounce-slow {
    animation: bounce-slow 2s ease-in-out infinite;
  }

  @keyframes typing-cursor {
    0%, 100% {
      border-color: transparent;
    }
    50% {
      border-color: #10b981;
    }
  }

  .typing-animation {
    border-right: 2px solid #10b981;
    animation: typing-cursor 0.75s step-end infinite;
  }
</style>

<script>
  const demoButtons = document.querySelectorAll('.demo-button');
  const toast = document.getElementById('toast-notification');
  const toastMessage = document.getElementById('toast-message');
  const toastClose = document.getElementById('toast-close');
  const toastProgress = document.getElementById('toast-progress');

  const message = "Este proyecto está ejecutándose de modo local en el cliente. No se puede visualizar en línea, pero está completamente funcional en entornos de desarrollo locales.";

  let toastTimeout: number | undefined;
  let progressTimeout: number | undefined;

  function showToast(projectName: string) {
    if (toastMessage && toast && toastProgress) {
      // Reset message
      toastMessage.textContent = '';

      // Show toast
      toast.classList.remove('opacity-0', 'pointer-events-none', 'translate-x-full');
      toast.classList.add('opacity-100', 'translate-x-0');

      // Type message
      let charIndex = 0;
      function typeMessage() {
        if (charIndex < message.length) {
          toastMessage!.textContent += message[charIndex];
          charIndex++;
          setTimeout(typeMessage, 20);
        }
      }
      setTimeout(typeMessage, 300);

      // Start progress bar
      setTimeout(() => {
        toastProgress!.classList.remove('w-0');
        toastProgress!.classList.add('w-full');
      }, 100);

      // Auto hide after 5 seconds
      if (toastTimeout) clearTimeout(toastTimeout);
      toastTimeout = window.setTimeout(hideToast, 5000);
    }
  }

  function hideToast() {
    if (toast && toastProgress) {
      toast.classList.add('opacity-0', 'pointer-events-none', 'translate-x-full');
      toast.classList.remove('opacity-100', 'translate-x-0');

      // Reset progress
      setTimeout(() => {
        toastProgress!.classList.remove('w-full');
        toastProgress!.classList.add('w-0');
      }, 500);
    }
  }

  // Add click handlers to demo buttons
  demoButtons.forEach(button => {
    button.addEventListener('click', (e) => {
      e.preventDefault();
      const projectName = (button as HTMLElement).dataset.project || '';
      showToast(projectName);
    });
  });

  // Close button
  toastClose?.addEventListener('click', () => {
    if (toastTimeout) clearTimeout(toastTimeout);
    hideToast();
  });
</script>
