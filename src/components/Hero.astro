<style>
  .pixel-name {
    color: #10b981;
    overflow: hidden;
    border-right: 3px solid #10b981;
    white-space: nowrap;
    margin: 0 auto;
    letter-spacing: 0.1em;
    animation: typing 3.5s steps(40, end) infinite, blink 0.75s step-end infinite;
  }

  @media (max-width: 768px) {
    .pixel-name {
      font-size: 1.25rem;
      letter-spacing: 0.05em;
    }
  }

  @keyframes bounce-in {
    0% {
      opacity: 0;
      transform: scale(0.3) translateY(-20px);
    }
    50% {
      transform: scale(1.05) translateY(0);
    }
    70% {
      transform: scale(0.95);
    }
    100% {
      opacity: 1;
      transform: scale(1);
    }
  }

  .animate-bounce-in {
    animation: bounce-in 0.6s ease-out forwards;
    opacity: 0;
  }

  @keyframes click-hand {
    0%, 100% {
      transform: scale(1) translateY(0);
    }
    50% {
      transform: scale(1.1) translateY(-5px);
    }
  }

  .animate-click-hand {
    animation: click-hand 0.5s ease-in-out;
  }

  @keyframes typing {
    from { width: 0; }
    to { width: 100%; }
  }

  @keyframes blink {
    from, to { border-color: transparent; }
    50% { border-color: #10b981; }
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-20px); }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }
</style>

<script>
  // C칩digo simplificado que se escribir치
  const codeText = `<!-- Mi Perfil Profesional -->
<div class="engineer">
  <h1>Ingeniero de Sistemas e Inform치tica</h1>
  <p class="passion">
    Apasionado por la programaci칩n,
    el an치lisis de datos y la electr칩nica.
    Especializado en transformaci칩n digital
    y soluciones innovadoras.
  </p>
</div>`;

  const codeContent = document.getElementById('code-content');
  const handCursor = document.getElementById('hand-cursor');
  const codeContainer = document.getElementById('code-container');
  const renderedOutput = document.getElementById('rendered-output');

  let charIndex = 0;
  let isTyping = true;
  let isMouseInside = false;
  let resetTimeout: number | undefined;

  // Funci칩n para aplicar syntax highlighting One Dark Pro
  function applySyntaxHighlighting(text: string): string {
    // Aplicar colores One Dark Pro
    return text
      // Comentarios HTML (verde gris치ceo)
      .replace(/(&lt;!--.*?--&gt;)/g, '<span style="color: #5c6370; font-style: italic;">$1</span>')
      // Tags HTML (rojo)
      .replace(/(&lt;\/?)([\w]+)/g, '$1<span style="color: #e06c75;">$2</span>')
      // Atributos (amarillo)
      .replace(/\s([\w-]+)=/g, ' <span style="color: #d19a66;">$1</span>=')
      // Strings (verde)
      .replace(/"([^"]*)"/g, '<span style="color: #98c379;">"$1"</span>')
      // Brackets (cyan)
      .replace(/(&gt;|&lt;)/g, '<span style="color: #56b6c2;">$1</span>');
  }

  function typeCode() {
    if (charIndex < codeText.length && isTyping) {
      if (codeContent) {
        const currentText = codeText.substring(0, charIndex + 1);
        // Escapar HTML
        const escapedText = currentText
          .replace(/</g, '&lt;')
          .replace(/>/g, '&gt;');

        // Aplicar syntax highlighting
        const highlightedText = applySyntaxHighlighting(escapedText);
        codeContent.innerHTML = highlightedText;

        charIndex++;

        // Velocidad r치pida de escritura
        const speed = Math.random() * 15 + 5;
        setTimeout(typeCode, speed);
      }
    } else if (charIndex >= codeText.length) {
      // Escritura completa - mostrar mano y hacer clic autom치tico
      setTimeout(() => {
        showHandAndClick();
      }, 500);
    }
  }

  function showHandAndClick() {
    if (handCursor) {
      handCursor.classList.remove('opacity-0');
      handCursor.classList.add('opacity-100');

      // Auto click despu칠s de 800ms
      setTimeout(() => {
        renderOutput();
      }, 800);
    }
  }

  function renderOutput() {
    // Hide hand
    handCursor?.classList.add('opacity-0');
    handCursor?.classList.remove('opacity-100');

    // Hide code container
    codeContainer?.classList.add('opacity-0', 'pointer-events-none');
    codeContainer?.classList.remove('opacity-100');

    // Show rendered output in the same position
    setTimeout(() => {
      renderedOutput?.classList.remove('opacity-0', 'pointer-events-none', 'scale-95');
      renderedOutput?.classList.add('opacity-100', 'pointer-events-auto', 'scale-100');

      // Start reset timer only if mouse is not inside
      if (!isMouseInside) {
        startResetTimer();
      }
    }, 300);
  }

  function startResetTimer() {
    // Clear any existing timer
    if (resetTimeout) clearTimeout(resetTimeout);

    // Wait 5 seconds before resetting
    resetTimeout = window.setTimeout(() => {
      if (!isMouseInside) {
        resetAnimation();
      }
    }, 5000);
  }

  function resetAnimation() {
    // Hide rendered output
    renderedOutput?.classList.add('opacity-0', 'pointer-events-none', 'scale-95');
    renderedOutput?.classList.remove('opacity-100', 'pointer-events-auto', 'scale-100');

    // Reset code
    if (codeContent) codeContent.innerHTML = '';
    charIndex = 0;
    isTyping = true;

    // Show code container
    setTimeout(() => {
      codeContainer?.classList.remove('opacity-0', 'pointer-events-none');
      codeContainer?.classList.add('opacity-100');

      // Restart typing - esto hace que sea c칤clico infinitamente
      setTimeout(() => {
        typeCode();
      }, 300);
    }, 500);
  }

  // Detect mouse enter/leave on rendered output
  renderedOutput?.addEventListener('mouseenter', () => {
    isMouseInside = true;
    if (resetTimeout) {
      clearTimeout(resetTimeout);
    }
  });

  renderedOutput?.addEventListener('mouseleave', () => {
    isMouseInside = false;
    // Start timer when mouse leaves
    if (renderedOutput.classList.contains('opacity-100')) {
      startResetTimer();
    }
  });

  // Start typing after a short delay
  setTimeout(() => {
    typeCode();
  }, 1000);
</script>
